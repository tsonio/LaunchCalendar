<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tsonio.launchcalendar.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/dayInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:ems="10"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/monthInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dayInput"
            android:layout_below="@+id/dayInput"
            android:layout_marginTop="58dp"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/yearInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/monthInput"
            android:layout_below="@+id/monthInput"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/dayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/monthInput"
            android:layout_alignStart="@+id/dayInput"
            android:layout_marginBottom="41dp"
            android:text="Day" />

        <TextView
            android:id="@+id/monthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/yearInput"
            android:layout_alignStart="@+id/monthInput"
            android:layout_marginBottom="39dp"
            android:text="Month" />

        <TextView
            android:id="@+id/yearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/yearInput"
            android:layout_alignStart="@+id/yearInput"
            android:layout_marginBottom="37dp"
            android:text="Year" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dayLabel"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="39dp"
            android:layout_marginStart="9dp"
            android:text="Input a date in the fields below to specify the earliest date from which to display past launches:" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yearInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="@string/submitButton" />

        <TextView
            android:id="@+id/mostRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submitButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp" />

    </RelativeLayout>
</FrameLayout>
